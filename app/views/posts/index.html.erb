<% @posts.each do |post| %>
  <div class="post_wrapper">
    <h2 class="title"><%= link_to post.title, post %></h2>
    <p class="body"><%= post.created_at.strftime("%d %B %Y") %> |
      <%= post.comments.count %> Comments</p>
    <p class="body"><%= link_to post.body, post %></p>
    </div>
<% end %>
