<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_name"><strong><%= comment.name %></strong></p>
    <p class="comment_body"><%= comment.body %></p>
    <% if !comment.created_at.nil? %>
      <p class="comment_time"><%= time_ago_in_words(comment.created_at) %> <%=t :ago %></p>
    <% end %>
  </div>
  <% if user_signed_in? %>
    <p><%= t("delete_html", href: link_to(t("delete"), [comment.post, comment],
      method: :delete, class: "button")) %></p>
  <% end %>

</div>
