<%= form_for [@post, Comment.new] do |f| %>

  <% if @comment && @comment.errors.any? %>
    <% @comment.errors.each do |attribute, error| %>
      <li><%= error %></li>
    <% end %>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <br>
  <p>
    <%= f.submit %>
  </p>
<% end %>
